<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:id="@+id/today_date"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="날짜표시"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_sentence"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="15dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="『  새로운 인생을 살아가는 나, 오늘 하루도 수고 했어요.  』"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/today_date"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/btn_healthcheck"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:background="@color/background"
        android:scaleType="fitCenter"
        android:src="@drawable/healthcheck"
        app:layout_constraintBottom_toTopOf="@+id/btn_chatbot"
        app:layout_constraintEnd_toStartOf="@+id/guideline_center"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/main_sentence"
        app:layout_constraintVertical_bias="0.497" />

    <ImageButton
        android:id="@+id/btn_game"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:background="@color/background"
        android:scaleType="fitCenter"
        android:src="@drawable/game"
        app:layout_constraintBottom_toTopOf="@+id/btn_community"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_center"
        app:layout_constraintTop_toBottomOf="@+id/main_sentence" />

    <ImageButton
        android:id="@+id/btn_chatbot"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:background="@color/background"
        android:scaleType="fitCenter"
        android:src="@drawable/chatbot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_center"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/main_sentence" />

    <ImageButton
        android:id="@+id/btn_community"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:background="@color/background"
        android:scaleType="fitCenter"
        android:src="@drawable/community"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_center"
        app:layout_constraintTop_toBottomOf="@+id/main_sentence" />

    <ImageButton
        android:id="@+id/btn_bookshelf"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:background="@color/background"
        android:scaleType="fitCenter"
        android:src="@drawable/bookshelf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_center"
        app:layout_constraintStart_toStartOf="@+id/guideline_left"
        app:layout_constraintTop_toBottomOf="@+id/btn_chatbot" />

    <ImageButton
        android:id="@+id/btn_setting"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:background="@color/background"
        android:scaleType="fitCenter"
        android:src="@drawable/setting"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline_right"
        app:layout_constraintStart_toStartOf="@+id/guideline_center"
        app:layout_constraintTop_toBottomOf="@+id/btn_community" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="15dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="15dp" />


</androidx.constraintlayout.widget.ConstraintLayout>