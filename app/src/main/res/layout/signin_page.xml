<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="-0.05"
        android:text="회원가입"
        android:textAlignment="center"
        android:textColor="@color/brown_text"
        android:textSize="40sp"
        android:layout_marginTop="180dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_id"
        android:layout_width="98dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:letterSpacing="-0.05"
        android:text="아이디"
        android:textAlignment="center"
        android:textColor="@color/brown_text"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toTopOf="@+id/guideline6" />

    <EditText
        android:id="@+id/edit_userid"
        android:layout_width="200dp"
        android:layout_height="28dp"
        android:background="@color/white"
        android:hint="아이디를 입력해주세요."
        android:paddingStart="10dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="@+id/guideline6" />

    <TextView
        android:id="@+id/text_pw"
        android:layout_width="100dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:letterSpacing="-0.05"
        android:text="비밀번호"
        android:textAlignment="center"
        android:textColor="@color/brown_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/text_pw_check"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@+id/text_id" />

    <EditText
        android:id="@+id/edit_pw"
        android:layout_width="200dp"
        android:layout_height="28dp"
        android:background="@color/white"
        android:hint="비밀번호를 입력해주세요."
        android:paddingStart="10dp"
        android:textSize="15sp"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/edit_pw_check"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/edit_userid" />

    <TextView
        android:id="@+id/text_pw_check"
        android:layout_width="100dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:letterSpacing="-0.05"
        android:text="비밀번호 확인"
        android:textAlignment="center"
        android:textColor="@color/brown_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_pw_check"
        android:layout_width="200dp"
        android:layout_height="28dp"
        android:background="@color/white"
        android:hint="비밀번호를 확인해주세요."
        android:paddingStart="10dp"
        android:inputType="textPassword"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_username"
        android:layout_width="100dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:letterSpacing="-0.05"
        android:text="닉네임"
        android:textAlignment="center"
        android:textColor="@color/brown_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/text_birth"
        app:layout_constraintStart_toStartOf="@+id/guideline1"
        app:layout_constraintTop_toBottomOf="@+id/text_pw_check" />

    <EditText
        android:id="@+id/edit_nickname"
        android:layout_width="200dp"
        android:layout_height="28dp"
        android:background="@color/white"
        android:hint="닉네임을 입력해주세요."
        android:paddingStart="10dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_birth"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/edit_pw_check" />

    <TextView
        android:id="@+id/text_birth"
        android:layout_width="100dp"
        android:layout_height="28dp"
        android:gravity="center"
        android:letterSpacing="-0.05"
        android:text="생년월일"
        android:textAlignment="center"
        android:textColor="@color/brown_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintStart_toStartOf="@+id/guideline1" />

    <EditText
        android:id="@+id/edit_birth"
        android:layout_width="200dp"
        android:layout_height="28dp"
        android:background="@color/white"
        android:hint="생년월일을 입력해주세요."
        android:paddingStart="10dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toStartOf="@+id/guideline2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create_account"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_background"
        android:text="가입하기"
        android:textColor="@color/brown_text"
        android:textSize="20sp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.13" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.87" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

</androidx.constraintlayout.widget.ConstraintLayout>