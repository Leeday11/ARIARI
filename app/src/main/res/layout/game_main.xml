<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/game_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/game_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_mathgame"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:background="@color/background"
        android:scaleType="fitCenter"
        android:src="@drawable/mathgame"
        app:layout_constraintBottom_toTopOf="@+id/btn_arraygame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_header" />

    <ImageButton
        android:id="@+id/btn_arraygame"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:background="@color/background"
        android:scaleType="fitCenter"
        android:src="@drawable/find_number"
        app:layout_constraintBottom_toTopOf="@id/game_comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_header" />

    <ImageButton
        android:id="@+id/btn_cardgame"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:background="@color/background"
        android:scaleType="fitCenter"
        android:src="@drawable/same_card"
        app:layout_constraintBottom_toTopOf="@id/game_comment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_arraygame" />

    <ImageView
        android:id="@+id/game_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/game_comment"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>