<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/frequency_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/check_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/textview_background"
        android:gravity="center"
        android:text="증상 빈도수를 체크해주세요!"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/brown_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
    android:id="@+id/check_1"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="15dp"
    android:background="@color/white"
    android:gravity="center"
    android:text="1. 오늘 얼굴에 열감이 느껴진 횟수는 몇 번 있었나요?"
    android:textSize="18sp"
    android:letterSpacing="-0.05"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/check_title"
    />

    <RadioGroup
        android:id="@+id/group1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="15dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/check_1">
        <RadioButton
            android:id="@+id/radio1_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="0회"
            android:textSize="15sp"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/radio1_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="1~2회"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/radio1_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="3~4회"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/radio1_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="5~6회"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/radio1_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="7회↑"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"/>
    </RadioGroup>

    <TextView
        android:id="@+id/check_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="2. 오늘 발한 증상은 몇 번 있었나요?"
        android:textSize="18sp"
        android:letterSpacing="-0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group1"
        />
    <RadioGroup
        android:id="@+id/group2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="15dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/check_2">
        <RadioButton
            android:id="@+id/radio2_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="0회"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/radio2_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="1~2회"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/radio2_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="3~4회"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/radio2_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="5~6회"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/radio2_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="7회↑"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"/>
    </RadioGroup>


    <TextView
        android:id="@+id/check_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="3. 오늘 두통/어지럼증 증상은 몇 번 있었나요?"
        android:textSize="18sp"
        android:letterSpacing="-0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group2"/>
    <RadioGroup
        android:id="@+id/group3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="15dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/check_3">
        <RadioButton
            android:id="@+id/radio3_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="0회"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/radio3_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="1~2회"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/radio3_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="3~4회"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/radio3_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="5~6회"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/radio3_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="7회↑"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"/>
    </RadioGroup>


    <TextView
        android:id="@+id/check_4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="4. 오늘의 몸상태를 점수로 매긴다면?"
        android:textSize="18sp"
        android:letterSpacing="-0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group3"
        />
    <RadioGroup
        android:id="@+id/group4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginHorizontal="15dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/check_4"
        >
        <RadioButton
            android:id="@+id/radio4_1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="1점"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/radio4_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="2점"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/radio4_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="3점"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/radio4_4"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="4점"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/radio4_5"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="5점"
            android:gravity="center"
            android:textAlignment="center"
            android:button="@null"/>
    </RadioGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:background="@drawable/btn_background"
        android:text="제출"
        android:textSize="15sp"
        android:textColor="@color/brown_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group4" />



</androidx.constraintlayout.widget.ConstraintLayout>